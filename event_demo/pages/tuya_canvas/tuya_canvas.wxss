/* pages/tuya_canvas/tuya_canvas.wxss */

page {
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  position: relative;
}

.canvas_area {
  width: 100%;
  height: 100%;
  background-color: lightcyan;
}

.myCanvas {
  width: 100%;
  height: 100%;
}

.canvas_tools {
  position: fixed;
  left: 0;
  bottom: 20rpx;
  width: 100%;
  height: 4oorpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.box {
  width: 100rpx;
  height: 100rpx;
  background-color: rebeccapurple;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box3{
  background-color: #cc0033;
}
.box4{
  background-color: #ff9900;
}










